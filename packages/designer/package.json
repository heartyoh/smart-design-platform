{
  "name": "@things-factory/designer",
  "version": "0.0.7",
  "main": "dist-server/index.js",
  "browser": "client/index.js",
  "things-factory": true,
  "license": "MIT",
  "author": "heartyoh",
  "description": "process designer application",
  "publishConfig": {
    "access": "public",
    "@things-factory:registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heartyoh/smart-design-platform.git",
    "directory": "packages/designer"
  },
  "scripts": {
    "serve": "things-factory sdp",
    "serve:dev": "npm run build:server && things-factory-dev sdp",
    "build": "tsc --p tsconfig.json",
    "build:client": "npm run clean:client && webpack --config ../../node_modules/@things-factory/builder/webpack.config.js",
    "build:server": "npm run clean:server && tsc",
    "clean:server": "rm -rf dist-server",
    "clean:client": "rm -rf dist-client",
    "clean": "npm run clean:server && npm run clean:client",
    "migration": "npm run build:server && things-factory-migration",
    "migration:privileges": "npm run build:server && things-factory-migration-privileges",
    "migration:create": "node ../../node_modules/typeorm/cli.js migration:create -d ./server/migrations",
    "migration:generate": "node ../../node_modules/typeorm/cli.js migration:generate",
    "migration:run": "node ../../node_modules/typeorm/cli.js migration:run",
    "migration:revert": "node ../../node_modules/typeorm/cli.js migration:revert",
    "stop:dev": "kill $(lsof -t -i:3000,3001)",
    "stop": "things-factory-stop sdp",
    "docker": "things-factory-dockerize hatiolab/sdp:latest hatiolab/sdp:$npm_package_version",
    "docker:push": "docker image push hatiolab/sdp:latest && docker image push hatiolab/sdp:$npm_package_version",
    "docker:run": "docker run -it -p 4000:3000 hatiolab/sdp:latest"
  },
  "dependencies": {
    "@operato/data-grist": "^0.2.49",
    "@operato/popup": "^0.2.49",
    "@things-factory/process-modeller": "^0.0.7",
    "@things-factory/equip-base": "^0.0.7",
    "@things-factory/api": "^4.0.18",
    "@things-factory/apptool-ui": "^4.0.18",
    "@things-factory/auth-ui": "^4.0.18",
    "@things-factory/board-service": "^4.0.18",
    "@things-factory/context-ui": "^4.0.18",
    "@things-factory/export-ui": "^4.0.18",
    "@things-factory/export-ui-excel": "^4.0.18",
    "@things-factory/grist-ui": "^4.0.18",
    "@things-factory/help": "^4.0.18",
    "@things-factory/i18n-ui": "^4.0.18",
    "@things-factory/integration-ui": "^4.0.18",
    "@things-factory/lite-menu": "^4.0.18",
    "@things-factory/more-ui": "^4.0.18",
    "@things-factory/notification": "^4.0.18",
    "@things-factory/oauth2-client": "^4.0.18",
    "@things-factory/print-ui": "^4.0.18",
    "@things-factory/resource-ui": "^4.0.18",
    "@things-factory/setting-base": "^4.0.18",
    "@things-factory/setting-ui": "^4.0.18",
    "@things-factory/shell": "^4.0.18",
    "@things-factory/system-ui": "^4.0.18"
  },
  "devDependencies": {
    "@things-factory/builder": "^4.0.18",
    "@types/codemirror": "^5.60.5"
  }
}
