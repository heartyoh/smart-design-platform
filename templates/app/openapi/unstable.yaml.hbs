openapi: 3.0.0
info:
  description: >
    For the latest release information please check our [release notes](https://developer.{{ name }}.com/release_notes).
    The {{ titleCase name }} API exposes integrations endpoint and related functions.
  version: 'unstable'
  title: '{{ titleCase name }}'
  termsOfService: 'https://{{ name }}.com/terms/'
  contact:
    email: 'heartyoh@hatiolab.com'
  license:
    name: MIT
    url: http://mit-license.org/
tags:
  - name: '{{ name }}'
    description: 'API for read, create and update {{ name }}s'
schemes:
  - 'https'
  - 'http'
servers:
  - url: '/api/unstable'

components:
  securitySchemes:
    basicAuth:
      type: http
      scheme: basic
    bearerAuth:
      type: http
      scheme: bearer

security:
  - basicAuth: []
  - bearerAuth: []
responses:
  UnauthorizedError:
    description: Unauthorized

externalDocs:
  description: 'Find out about our release notes'
  url: 'https://developer.{{ name }}.com/release_notes'
